<?xml version="1.0" encoding="utf-8"?>
<root version="3.3" release="3">
	<!-- Please see the LICENSE.md file included with this distribution for attribution and copyright information. -->
	<properties>
		<name>Disease Tracker</name>
		<version>2.1.1</version>
		<author>bmos (Wil Thieme)</author>
		<description>This FantasyGrounds extension helps track disease duration, saves, effects, and other information.</description>
		<ruleset>
			<name>PFRPG</name>
		</ruleset>
		<ruleset>
			<name>3.5E</name>
		</ruleset>
	</properties>

	<announcement text="https://github.com/bmos/FG-PFRPG-Disease-Tracker\nPFRPG Disease Tracker v2.1.1:\nThis extension helps track disease duration, saves, effects, and other information. To access it, click the pill bottle button next by the character's hitpoints.\nTo have saving throws rolled automatically based on the in-game clock, you must be using the Clock Adjuster extension."  icon="logo_vitamin" font="emotefont" />

	<base>
		<!-- Graphics -->
	    <icon name="logo_vitamin" file="graphics/vitamin_logo.png" />
	    <icon name="button_vitamin" file="graphics/button_vitamin.png" />
	    <icon name="button_vitamin_down" file="graphics/button_vitamin_down.png" />
	    <icon name="button_diseases" file="graphics/button_diseases.png" />
	    <icon name="button_diseases_down" file="graphics/button_diseases_down.png" />
	    <icon name="SWU_light_button_diseases" file="graphics/SWU_light_button_diseases.png" />
	    <icon name="SWU_light_button_diseases_down" file="graphics/SWU_light_button_diseases_down.png" />
	    <icon name="SWU_dark_button_diseases" file="graphics/SWU_dark_button_diseases.png" />
	    <icon name="SWU_dark_button_diseases_down" file="graphics/SWU_dark_button_diseases_down.png" />
	    <icon name="simplebrown_button_diseases" file="graphics/simplebrown_button_diseases.png" />
	    <icon name="simplebrown_button_diseases_down" file="graphics/simplebrown_button_diseases_down.png" />
	    <icon name="simplegray_button_diseases" file="graphics/simplegray_button_diseases.png" />
	    <icon name="simplegray_button_diseases_down" file="graphics/simplegray_button_diseases_down.png" />
		<!-- Campaign Records -->
		<includefile source="campaign/record_char_main.xml" />
		<includefile source="campaign/record_npc.xml" />
		<includefile source="campaign/record_disease.xml" />
		<!-- Strings -->
		<includefile source="strings/strings_disease_tracker.xml" />
		<!-- Scripts -->
		<script name="DiseaseTracker" file="scripts/disease_tracker.lua" />
		<script name="DiseaseTrackerLib" file="scripts/disease_tracker_lib.lua" />
		<script name="ActionDiseaseSave" file="scripts/manager_action_diseasesave.lua" />
		<script name="ActionDiseaseTimeRoll" file="scripts/manager_action_diseasetimeroll.lua" />
	</base>
</root>
