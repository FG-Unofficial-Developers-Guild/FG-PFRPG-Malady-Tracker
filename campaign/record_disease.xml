<root>
	<windowclass name="referencedisease">
		<frame>recordsheet</frame>
		<placement>
			<size width="450" height="475" />
		</placement>
		<sizelimits>
			<minimum width="350" height="450" />
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<nodelete />
		<playercontrol />
		<sharable />
		<script>
			function onLockChanged()
				if header.subwindow then
					header.subwindow.update()
				end
				if content.subwindow then
					content.subwindow.update()
				end
			end
		</script>
		<sheetdata>
			<sub_ref_header name="header">
				<class>diseasedesc_header</class>
			</sub_ref_header>

			<frame_ref_content />
			<sub_ref_content name="content">
				<class>diseasedesc_stats</class>
			</sub_ref_content>
			<scrollbar_ref_content />
			
			<resize_referencepage />
			<close_referencepage />
		</sheetdata>
	</windowclass>

	<windowclass name="diseasedesc_header">
		<margins control="0,0,0,7" />
		<script>
			function onInit()
				update()
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode())
				name.setReadOnly(bReadOnly)
			end
		</script>
		<sheetdata>
			<link_record_header>
				<class>referencedisease</class>
			</link_record_header>

			<anchor_record_header_right />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name">
				<empty textres="library_recordtype_empty_disease" />
			</string_record_name>
		</sheetdata>
	</windowclass>
	
	<windowclass name="diseasedesc_stats">
		<margins control="0,0,0,15" />
		<script file="campaign/scripts/diseasedesc_stats.lua" />
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<label_column name="type_biglabel">
				<anchored>
					<top relation="relative" offset="7" />
				</anchored>
				<font>reference-b-large</font>
			</label_column>
			
			<header_column name="section_stats_label">
				<static textres="record_disease_section_stats_label"/>
				<center />
			</header_column>
			
			<label_column name="type_label">
				<static textres="record_disease_type_label" />
			</label_column>	
			<string_columnh name="type">
				<default>disease</default>
				<script>
					function onValueChanged()
						window.switchType()
					end
				</script>
			</string_columnh>
			
			<label_column name="subtype_label">
				<static textres="record_disease_subtype_label" />
			</label_column>
			<string_columnh name="subtype" />
			
			<label_column name="save_label">
				<static textres="record_disease_save_label" />
			</label_column>
			
			<string_columnh name="save_string">
				<anchored>
					<left />
				</anchored>
				<readonly />
			</string_columnh>
			
			<number_column_right name="savedc">
				<anchored height="20" >
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				</anchored>
				<hideonvalue value="0" />
			</number_column_right>
			<label name="savedc_label">
				<anchored height="20">
					<top parent="subtype" anchor="bottom" offset="7" />
					<right parent="savedc" anchor="left" offset="-10" />
				</anchored>
				<static textres="dc" />
			</label>
			
			<button_stringcycler name="savetype">
				<anchored width="50">
					<top parent="subtype" anchor="bottom" offset="7" />
					<right parent="savedc_label" anchor="left" offset="-10" />
				</anchored>
				<parameters>
					<defaultlabelres>power_label_savetypenone</defaultlabelres>
					<labelsres>power_label_savetypefort|power_label_savetyperef|power_label_savetypewill</labelsres>
					<values>fortitude|reflex|will</values>
				</parameters>
			</button_stringcycler>

			<button_roll name="saveroll">
				<anchored to="save_string" position="left" offset="5" />
				<script>
					function onClickRelease(target, button, image)
						local rActor = ActorManager.getActor('pc', window.getDatabaseNode().getChild('...'))
						local sSave = string.lower(window.savetype.getValue())
						local nDC = window.savedc.getValue()
						DiseaseTracker.rollSave(rActor, sSave, nDC)
					end
				</script>
			</button_roll>

			<buttoncontrol name="raisesave">
				<anchored to="saveroll" position="left" offset="5" width="20" height="20" />
				<icon normal="button_zoomin" pressed="button_zoomin_down" />
				<tooltip textres="char_disease_raisesave" />
				<script>
					function onClickRelease(target, button, image)
						local nDC = (window.savedc.getValue() + 2)
						window.savedc.setValue(nDC)
						window.generateSaveString()
					end
				</script>
			</buttoncontrol>
			
			<label_column name="onset_label">
				<static textres="record_disease_onset_label" />
			</label_column>
			<string_columnh name="onset" />
			
			<label_column name="freq_label">
				<static textres="record_disease_freq_label" />
			</label_column>
			
			<string_columnh name="freq_string">
				<anchored>
					<left />
				</anchored>
				<readonly />
			</string_columnh>
			
			<number_column_right name="freq_interval">
				<anchored height="20" >
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				</anchored>
				<hideonvalue value="0" />
			</number_column_right>
			
			<button_stringcycler name="freq_unit">
				<anchored width="50">
					<top parent="onset" anchor="bottom" offset="7" />
					<right parent="freq_interval" anchor="left" offset="-10" />
				</anchored>
				<parameters>
					<defaultlabelres>record_disease_cycler_freq_none</defaultlabelres>
					<labelsres>record_disease_cycler_freq_round|record_disease_cycler_freq_minute|record_disease_cycler_freq_hour|record_disease_cycler_freq_day</labelsres>
					<values>rounds|minutes|hours|days</values>
				</parameters>
			</button_stringcycler>
			
			<label_column name="duration_label">
				<static textres="record_disease_duration_label" />
			</label_column>
			
			<string_columnh name="duration_string">
				<anchored>
					<left />
				</anchored>
				<readonly />
			</string_columnh>
			
			<number_column_right name="duration_interval">
				<anchored height="20" >
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				</anchored>
				<hideonvalue value="0" />
			</number_column_right>
			
			<button_stringcycler name="duration_unit">
				<anchored width="50">
					<top parent="freq_unit" anchor="bottom" offset="7" />
					<right parent="duration_interval" anchor="left" offset="-10" />
				</anchored>
				<parameters>
					<defaultlabelres>record_disease_cycler_duration_none</defaultlabelres>
					<labelsres>record_disease_cycler_duration_rounds|record_disease_cycler_duration_minutes|record_disease_cycler_duration_hours|record_disease_cycler_duration_days|record_disease_cycler_duration_weeks|record_disease_cycler_duration_indefinite</labelsres>
					<values>rounds|minutes|hours|days|weeks|forever</values>
				</parameters>
			</button_stringcycler>

			<buttoncontrol name="increaseduration">
				<anchored to="duration_string" position="left" offset="5" width="20" height="20" />
				<icon normal="button_zoomin" pressed="button_zoomin_down" />
				<tooltip textres="char_disease_increaseduration" />
				<script>
					function onClickRelease(target, button, image)
						nDurInt = window.duration_interval.getValue()
						window.duration_interval.setValue(nDurInt * 1.5)
						window.generateDurationString()
					end
				</script>
			</buttoncontrol>
			
			<label_column name="cure_label">
				<static textres="record_disease_cure_label" />
			</label_column>
			<string_columnh name="cure" />
			
			<header_column name="section_effect_label">
				<static textres="record_disease_section_effect_label"/>
				<center />
			</header_column>

			<ft_columnh name="disease_effect" />
			
			<label_column name="poison_effect_primary_label">
				<static textres="record_disease_poison_effect_primary_label" />
			</label_column>
			<string_columnh name="poison_effect_primary" />
			
			<label_column name="poison_effect_secondary_label">
				<static textres="record_disease_poison_effect_secondary_label" />
			</label_column>
			<string_columnh name="poison_effect_secondary" />
			
			<header_column name="section_description_label">
				<static textres="record_disease_section_description_label"/>
				<center />
			</header_column>
			<ft_columnh name="description" />
		</sheetdata>
	</windowclass>
</root>